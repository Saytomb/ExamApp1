<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Главная страница" Height="450" Width="800" Icon="/Assets/Мастер пол.ico">
    <Grid>
        <Image Source="Assets/Мастер пол.png" Height="100" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,15,0,0"/>
        <TextBlock Text="Добро пожаловать в Мастер Пол!" FontSize="20" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" Margin="0,120,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Content="Сведения о заказах" Width="120" Height="40" Background="#67BA80" Foreground="White" Click="OpenInfoWindow"/>
            <Button Content="Создать заявку" Width="120" Height="40" Background="#67BA80" Foreground="White" Margin="20,0,0,0" Click="OpenOrderWindow"/>
        </StackPanel>
    </Grid>
</Window>
